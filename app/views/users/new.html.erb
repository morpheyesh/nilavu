<% provide(:title, 'Sign up') %> <!-- BEGIN LOGO -->
<div class="login">
	<div class="container">
		<div class="row">
			<div class="logo">
				<%= image_tag "logo.png" %>
			</div>
		</div>
		<!-- END LOGO -->
		<!-- BEGIN LOGIN -->
		<div class="col-xs-12 col-sm-8 col-md-8 col-lg-7 col-xl-6 col-sm-offset-2 col-md-offset-2 col-lg-offset-2 col-xl-offset-3 outer bg_white border_grey">
			<div class="container">
				<div class="row bottom-divider">
					<div class="col-lg-offset-1 col-md-offset-1 col-lg-10 col-md-10">
						<h2>Sign up<span class="sign_up_small"><i>Just a minute to step into  Megam  PaaS</span></i></h2>
					</div>
					<!-- <div class="col-lg-7 col-md-7">
					<p>it wont take more than 1 minut we promise</p>
					</div> -->
				</div>
			</div>

			<div class="cover col-lg-offset-1 col-md-offset-1 col-lg-10 col-md-10">
				<!-- BEGIN LOGIN FORM -->
				<%= form_tag users_path, multipart: true, :id => "megamform", :novalidate => "novalidate", :method => "post", data: { spinlock: "#spin_cross_cloud"}  do %>
				<div class="c_inline">
					<div class="row">
						<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
							<i class="c_ico-excla"></i>
							<% if session[:auth] %>
							<%= text_field_tag 'first_name', nil, :required => true, :id => 'first_name', :class => 'form-control', placeholder: "First Name", :value => @firstname , :data => {:placement=>"right"} %>
							<% else %>
							<%= text_field_tag 'first_name', nil, :required => true, :id => 'first_name', :class => 'form-control', placeholder: "First Name", :data => {:placement=>"right"} %>
							<% end %>
							
						</div>
						<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xl-6 input-icon right">
							<i class="c_ico-tick"></i>
							<% if session[:auth] %>
							<%= text_field_tag 'last_name', nil, :id => 'last_name', :class => 'form-control', placeholder: "Last Name", :value => @lastname %>
							<% else %>
							<%= text_field_tag 'last_name', nil, :id => 'last_name', :class => 'form-control', placeholder: "Last Name" %>
							<% end %>
							
						</div>
					</div>
				</div>
				<div class="form-group">
					<div class="row">
						<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-112">
							<i class="c_ico-excla"></i>
							<% if session[:auth] %>
							<%= text_field_tag 'phone', nil, :class => 'form-control', placeholder: "Phone Number", :value => @phone %>
							<% else %>
							<%= text_field_tag 'phone', nil, :class => 'form-control', placeholder: "Phone Number" %>
							<% end %>
						</div>
					</div>
				</div>

				<div class="form-group">
					<div class="row">
						<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
							<i class="c_ico-excla"></i>

							<% if session[:auth] %>
							<%= text_field_tag 'email', nil, placeholder: "Email", :readonly => true, :class => 'form-control', :value => @email %>
							<input type="hidden" name="social_uid" value="<%= @social_uid %>">
							<% else %>
							<%= text_field_tag 'email', nil, placeholder: "Email", :required => true, :class => 'form-control' %>
							<% end %>

						</div>
					</div>
				</div>

				<% random_hash = generate_api_token %>
				<input type="hidden" name="verification_hash" value="<%= random_hash %>">
				<input type="hidden" name="user_type" value="normal">

				<div class="form-group">
					<div class="c_inline">
						<div class="row">
							<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
								<%= password_field_tag 'password', nil, :required => true, :class=> 'form-control', placeholder: "Your Password" %>
							</div>
							<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
								<%= password_field_tag 'password_confirmation', nil, :required => true, :class=> 'form-control', placeholder: "Confirm Password" %>
							</div>
						</div>
					</div>
				</div>

				<div class="text-center">
					<%= submit_tag "Create Account", :class => "btn btn-success" %>
				</div>
				<% end %>
				<!-- END REGISTRATION FORM -->
			</div>

			<div class="col-lg-offset-1 col-md-offset-1 col-lg-10 col-md-10 footer">
				<p class="text-center">
					<u class="colr-bluegrey">Already have an account ? </u>&nbsp;&nbsp; <a href="signin"><u class="colr-denimblue">Login here</u></a>
				</p>
			</div>
		</div>
		<div  class="col-xs-12 col-sm-8 col-md-8 col-lg-7 col-xl-6 col-sm-offset-2 col-md-offset-2 col-lg-offset-2 col-xl-offset-3 outer footer-bottom">
			<div class="row">
				<p>
					<a href="http://podnix.com" target="_blank">Powered by Podnix Cloud</a>
				</p>
			</div>
		</div>
		<!-- END LOGIN -->
	</div>
</div>
